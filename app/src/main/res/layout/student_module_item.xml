<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/module_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/module_coefficient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Coefficient: 0"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/td_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TD: 0.00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tp_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TP: 0.00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/exam_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exam: 0.00"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/module_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Average: 0.00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/report_grade_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:padding="4dp"
            android:text="Report Issue"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>